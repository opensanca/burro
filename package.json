{
  "name": "burro",
  "version": "0.0.1",
  "description": "A biblioteca de components do open sanca",
  "main": "index.js",
  "watch": {
    "build": "_sass/*.sass"
  },
  "scripts": {
    "sass": "node-sass ./_sass/index.sass -o dist/",
    "postcss": "postcss dist/index.css > dist/index.min.css && rm dist/index.css",
    "clear": "rm -rf dist",
    "move": "mkdir dist/v0.0.1 && mv dist/index.min.css dist/v0.0.1/styles.min.css",
    "build": "npm run clear && npm run sass && npm run postcss && npm run move",
    "watch": "onchange \"_sass/**/*.sass\" -- npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opensanca/burro.git"
  },
  "keywords": [
    "vuejs",
    "react",
    "angular",
    "sass"
  ],
  "author": "Guilherme Diego <guilherme@monumentum.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opensanca/burro/issues"
  },
  "homepage": "https://github.com/opensanca/burro#readme",
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "cdnjs-importer": "^2.0.0-beta",
    "cssnano": "^3.10.0",
    "node-sass": "^4.7.2",
    "npm-watch": "^0.3.0",
    "onchange": "^4.0.0",
    "postcss": "^6.0.16",
    "postcss-cli": "^4.1.1",
    "surge": "^0.19.0"
  }
}
